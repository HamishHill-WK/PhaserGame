# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your_super_secret_key_here_change_this

# AWS RDS PostgreSQL Database Configuration
# Replace with your actual AWS RDS endpoint and credentials
DATABASE_URL=postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/database_name

# Example AWS RDS URL format:
# DATABASE_URL=postgresql://research_user:SecurePass123@phaser-research.abc123xyz.us-east-1.rds.amazonaws.com:5432/phaser_research_db

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# AWS Configuration (if needed)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Development vs Production
FLASK_ENV=development
# FLASK_ENV=production

# Database SSL Mode (required for AWS RDS)
DB_SSL_MODE=require
